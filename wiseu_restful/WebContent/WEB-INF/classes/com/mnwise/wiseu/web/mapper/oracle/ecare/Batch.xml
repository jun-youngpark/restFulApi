<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.Batch">
    <!--  ==================== INSERT ====================  -->
    <insert id="insertBatch" parameterType="customBatch">
      	INSERT INTO nvbatch
      	(
            seq
            ,ecare_no
            ,result_seq
            ,channel
            ,req_user_id
            ,req_dept_id
            ,req_dt
            ,req_tm
            ,tmpl_type
            ,receiver_id
            ,receiver_nm
            ,receiver
            ,sender_nm
            ,sender
            ,subject
            ,send_fg
            ,secu_key
            ,preview_type
            ,data_cnt
            ,file_path1
            ,file_path2
            ,file_path3
            ,jonmun
            ,slot1
            ,slot2
            ,slot3
            ,slot4
            ,slot5
            ,slot6
            ,slot7
            ,slot8
            ,slot9
            ,slot10
        )
        VALUES
        (
             #{seq,jdbcType=VARCHAR}
            ,#{ecareNo,jdbcType=INTEGER}
            ,0
            ,#{channel,jdbcType=VARCHAR}
            ,#{reqUserId,jdbcType=VARCHAR}
            ,#{reqDeptId,jdbcType=VARCHAR}
			,to_char(sysdate, 'yyyyMMdd')
			,to_char(sysdate, 'hh24mmss')
            ,#{tmplType,jdbcType=VARCHAR}
            ,#{receiverId,jdbcType=VARCHAR}
            ,#{receiverNm,jdbcType=VARCHAR}
            ,#{receiver,jdbcType=VARCHAR}
            ,#{senderNm,jdbcType=VARCHAR}
            ,#{sender,jdbcType=VARCHAR}
            ,#{subject,jdbcType=VARCHAR}
            ,'R'
            ,#{secuKey,jdbcType=VARCHAR}
            ,'N'
			,#{datCnt}
            ,#{filePath1,jdbcType=VARCHAR}
            ,#{filePath2,jdbcType=VARCHAR}
            ,#{filePath3,jdbcType=VARCHAR}
            ,#{jonmun,jdbcType=VARCHAR,typeHandler=com.mnwise.wiseu.web.rest.common.JsonTypeHandler}
            ,#{slot1,jdbcType=VARCHAR}
            ,#{slot2,jdbcType=VARCHAR}
            ,#{slot3,jdbcType=VARCHAR}
            ,#{slot4,jdbcType=VARCHAR}
            ,#{slot5,jdbcType=VARCHAR}
            ,#{slot6,jdbcType=VARCHAR}
            ,#{slot7,jdbcType=VARCHAR}
            ,#{slot8,jdbcType=VARCHAR}
            ,#{slot9,jdbcType=VARCHAR}
            ,#{omniReceiver,jdbcType=VARCHAR}
        )
    </insert>

    <insert id="insertBatchResend" parameterType="Map">
        INSERT INTO NVBATCH(seq
            ,ecare_no
            ,result_seq
            ,channel
            ,req_user_id
            ,req_dept_id
            ,req_dt
            ,req_tm
            ,tmpl_type
            ,receiver_id
            ,receiver_nm
            ,receiver
            ,sender_nm
            ,sender
            ,subject
            ,send_fg
            ,secu_key
            ,preview_type
            ,file_path1
            ,file_path2
            ,file_path3
            ,jonmun
            ,slot1
            ,slot2
            ,slot3
            ,slot4
            ,slot5
            ,slot6
            ,slot7
            ,slot8
            ,slot9
            ,slot10)
             SELECT #{newSeq}
            ,ecare_no
            ,result_seq
            ,channel
            ,req_user_id
            ,req_dept_id
            ,req_dt
            ,req_tm
            ,tmpl_type
            ,receiver_id
            ,receiver_nm
            ,#{receiver}
            ,sender_nm
            ,sender
            ,subject
            ,'R'
            ,secu_key
            ,preview_type
            ,file_path1
            ,file_path2
            ,file_path3
            ,jonmun
            ,slot1
            ,slot2
            ,slot3
            ,slot4
            ,slot5
            ,slot6
            ,slot7
            ,slot8
            ,slot9
            ,#{omniReceiver}
             FROM NVBATCH
            WHERE seq = #{seq}
    </insert>
</mapper>
