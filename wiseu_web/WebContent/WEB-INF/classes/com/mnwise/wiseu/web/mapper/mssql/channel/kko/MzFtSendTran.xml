          , '1', #{attachment, jdbcType=VARCHAR}, 'B', #{serviceType, jdbcType=VARCHAR}, #{adFlag, jdbcType=VARCHAR}, #{serviceNo}, #{resultSeq}
          , #{fileName1, jdbcType=VARCHAR}
        )
