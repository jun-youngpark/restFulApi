            #{sn}, #{senderKey}, 'C', 'P', #{phoneNum}, #{tmplCd, jdbcType=VARCHAR}, #{subject, jdbcType=VARCHAR}, #{sendMessage}, #{callBack, jdbcType=VARCHAR}, #{smsSndYn, jdbcType=VARCHAR}
          , #{reqDeptCd, jdbcType=VARCHAR}, #{reqUsrId, jdbcType=VARCHAR}
